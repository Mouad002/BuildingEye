<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<TabPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.buildingeye.controllers.DashboardController">
   <tabs>
      <!-- USERS Tab -->
      <Tab text="USERS">
         <AnchorPane prefHeight="533.0" prefWidth="691.0">
            <children>

               <!-- Form for adding/updating user information -->
               <VBox layoutX="120.0" layoutY="6.0" prefHeight="160.0" prefWidth="390.0" spacing="10.0">
                  <TextField fx:id="usernameField" promptText="Username" styleClass="text-field1" stylesheets="@../css/stylesheet.css">
                     <VBox.margin>
                        <Insets left="10.0" right="10.0" top="20.0" />
                     </VBox.margin></TextField>
                  <HBox spacing="10.0">
                     <Button fx:id="captureButton" styleClass="button1" stylesheets="@../css/stylesheet.css" text="Capture Image">
                        <HBox.margin>
                           <Insets left="10.0" />
                        </HBox.margin></Button>
                  </HBox>
                  <ImageView fx:id="userImageView" fitHeight="100.0" fitWidth="100.0" preserveRatio="true" />
               </VBox>

                  <!-- Action buttons -->
               <HBox layoutX="148.0" layoutY="463.0" prefHeight="34.0" prefWidth="396.0" spacing="20.0">
                  <Button fx:id="addButton" prefHeight="34.0" prefWidth="141.0" styleClass="buttonAdd" stylesheets="@../css/stylesheet.css" text="Add" />
                  <Button fx:id="updateButton" prefHeight="34.0" prefWidth="125.0" styleClass="buttonUpdate" stylesheets="@../css/stylesheet.css" text="Update" />
                  <Button fx:id="deleteButton" prefHeight="34.0" prefWidth="125.0" styleClass="buttonDelete" stylesheets="@../css/stylesheet.css" text="Delete" />
               </HBox>
               <TableView fx:id="usersTable" layoutX="48.0" layoutY="194.0" prefHeight="250.0" prefWidth="580.0" styleClass="table-view" stylesheets="@../css/table-view.css">
                  <columns>
                     <TableColumn fx:id="colUsername" prefWidth="579.199987411499" text="Username" />
                  </columns>
               </TableView>
            </children>
         </AnchorPane>
      </Tab>

      <!-- STATS / LOGS Tab -->
      <Tab text="STATS / LOGS">
         <AnchorPane>
            <children>
               <Label layoutX="20.0" layoutY="20.0" text="Content for Stats / Logs will be added later." />
            </children>
         </AnchorPane>
      </Tab>
   </tabs>
</TabPane>
